{varType App\ProductModule\Presenter\ProductPresenter $presenter}

{block content}
    <div class="container mt-4">
        <div class="row">
            <section class="col-lg-12 mb-5">
                {control breadCrumb}

                <div class="row d-flex align-items-center">
                    <div class="col-lg-6 col-xl-5">
                        <img src="//placehold.it/800x600" alt="" class="img-fluid mt-4">
                        <div class="mt-3 d-flex">
                            <a href="#" n:for="$i = 0; $i < 5; $i++" class="pr-1">
                                <img src="//placehold.it/160x120" alt="" class="img-fluid">
                            </a>
                        </div>
                    </div>

                    <div class="offset-xl-1 col-lg-6">
                        <h1 class="mt-4 mt-lg-5">{$presenter->breadCrumb->getLastBreadCrumbItem()->getName()}</h1>

                        <div class="d-flex">
                            <div class="text-warning mr-2">
                                <i class="fas fa-star" n:for="$s = 0; $s < 5; $s++"></i>
                            </div>
                            <a href="#" data-togggle="tooltip" data-placement="top" title="Hodnocení: 5/5">
                                133 hodnocení
                            </a>
                        </div>

                        <div class="h5 my-3">
                            <span class="text-success font-weight-bold">Skladem</span>
                            <span>(97 ks)</span>
                        </div>

                        <div class="mb-0">
                            <div class="small mb-2">
                                <del>232 344 Kč</del>
                                -50%
                            </div>
                            <div class="h4 mb-0 text-danger font-weight-bold">132 145 Kč</div>
                            <div class="small text-dark">109 134,34 Kč bez DPH</div>
                        </div>

                        <button class="btn btn-danger btn-lg mt-4">
                            <i class="fas fa-cart-plus mr-2"></i>
                            Přidat do košíku
                        </button>

                        <p class="mt-4">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci amet commodi cupiditate doloribus
                            earum enim esse facere ipsam iure laboriosam laudantium possimus provident quae recusandae rem,
                            tempora ut? Vel, vero.
                            <br><a href="#" class="mt-2 d-block">Detailní informace <i class="fas fa-angle-down"></i></a>
                        </p>


                    </div>
                </div>
            </section>
        </div>
    </div>
{/block}
